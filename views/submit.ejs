<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Send Message</h2>

          
            <form method="post">
              <input type="hidden" name="_id" >
                <input type="hidden" name="oldName" >
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required >
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Message</label>
                  <input type="textarea" class="form-control" id="email" name="email" required >
                </div>
                <div class="mb-3">
                  <label for="noHp" class="form-label">noHp</label>
                  <input type="text" class="form-control" id="noHp" name="noHp" required >
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data contact</button>
              </form>

        </div>
    </div>
</div>